<Page x:Class="SupermarketBugrina.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SupermarketBugrina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid Background="#d09c7e">
        <Label Content="Зарегистрируйтесь" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Margin="0,80,0,0"/>
        <Label Content="Введите логин : " Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Margin="0,122,0,0"/>
        <Label Content="Введите пароль : " Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Margin="0,195,0,0"/>
        <TextBox x:Name="loginReg" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Margin="0,162,0,0" Width="290" />
        <TextBox x:Name="pwdReg" Height="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,234,0,0" Width="290" />
        <Button Click="regAut" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Регистрация" Background="#834e2f" BorderBrush="#3a2215" Foreground="White" Margin="0,282,0,0" Height="26" Width="124"/>
        <Label Content="Есть аккаунт? Авторизируйтесь" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Margin="251,367,0,0"/>
        <Button Click="autGo" VerticalAlignment="Top" Content="->" Background="#834e2f" BorderBrush="#3a2215" Foreground="White" Margin="491,368,0,0" Height="26" HorizontalAlignment="Left" Width="34"/>
    </Grid>
</Page>
